<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= params[:action] == 'new' ? 'Create new area' : 'Edit area' %></h5>
        </div>
        <div class="ibox-content">
          <%= form_with(model: [:admin, area], local: true, class: 'form-horizontal') do |form| %>
            <% if area.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(area.errors.count, "error") %> prohibited this area from being saved:</h2>

                <ul>
                <% area.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= form.label :name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: 'form-control', autofocus: true  %>
              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <%= form.label :icon, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= form.text_field :icon, class: 'form-control'  %>
                <span class="help-block m-b-none">Choose a Font Awesome icon class.</span>
              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                <% if area.persisted? %>
                  <div class="pull-right">
                    <%= link_to 'Delete', [:admin, area], method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
                  </div>
                <% end %>
                <div class="pull-left">
                  <%= link_to  "Cancel", @back_url, class: 'btn btn-white' %>
                  <%= form.submit class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
