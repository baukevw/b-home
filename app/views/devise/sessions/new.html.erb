<% content_for(:body_class, 'gray-bg') %>
<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">B<i class="fa fa-home"></i></h1>
    </div>
    <h3>Welcome to B-Home</h3>
    <p>
      Home Automation Control Centre.
    </p>
    <p>Login in to get access to the system.</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary block full-width m-b" %>
    <% end %>
    <% render "devise/shared/links" %>
    <p class="m-t"> <small>B-Home by Wize Studios &copy; <%= Time.zone.now.year %></small> </p>
  </div>
</div>
